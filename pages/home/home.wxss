/* pages/home/home.wxss */
.w_swiper image{
  width: 100%;
}

.recommends{
  display: flex;
  margin-top: 30rpx;
}

.recommends-item{
  flex: 1;
  text-align: center;
  padding-bottom: 30rpx;
  border-bottom: 20rpx solid #eee;
}

.recommends-item image{
  width: 160rpx;
  height: 160rpx;
}

.recommends-item view{
  font-size: 32rpx;
}

.popular{
  line-height: 60rpx;
  text-align: center
}

.weekPop{
  display: flex;
  flex-wrap: wrap;
}

.weekitem{
  width: 25%;
  line-height: 120rpx;
  background:blueviolet;
  text-align: center
}

.goods{
  display: flex;
  flex-wrap: wrap;
  justify-content: space-evenly;
}

.goods-item{
  width: 48%;
  padding-bottom: 20rpx;
  text-align: center;
}

.goods-item view{
  line-height: 600rpx;
  background: gold;
  border-radius: 40rpx;
}